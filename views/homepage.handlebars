    <!-- reviews section starts -->
    <main id="reviews" class="reviews">
      <h1 class="heading"><span>Our</span>Reviews</h1>
      <div class="container">
        <div class="">
          <button type="submit" class="random-btn-add">Add Your review</button>
          <button class="random-btn-see">See all Reviews</button>
        </div>
        <form class="form-review">
            <div class="form-group">
              <label for="exampleFormControlTextarea1" class="display-4">Please Add Your Review</label>
              <textarea class="form-control" id="Textarea1" rows="5"></textarea>
              <button  class="btn btn-primary mb-2 text-dark" id="submit-review">Submit Your Review</button>
            </div>
        </form>
      </div>
